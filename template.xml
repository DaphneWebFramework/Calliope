<?xml version="1.0" encoding="utf-8"?>
<template>
  <name>Calliope</name>
  <version>1.0.0</version>
  <description>Generates Markdown documentation from PHP classes.</description>
  <author>Eylem Ugurel</author>
  <email>eylemugurel@hotmail.com</email>
